package google;

import java.util.*;
public class tableSitDistance implements Comparable<tableSitDistance>{

		int left;
		int right;
		int dist;
		
		public tableSitDistance(int left, int right) {
			this.left = left;
			this.right = right;
			this.dist = Math.abs(right - left);
		}
		
		public int compareTo(tableSitDistance d) {
			if (this.dist < d.dist) {
				return d.dist;
			}
			else {
				return this.dist;
			}
		}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		
		PriorityQueue<tableSitDistance> que = new PriorityQueue<>();
		
		int[] pos = {1,3,4,6,8,12,17,26,44};
		
		for (int i = 0; i < pos.length - 1; i++) {
			for (int j = i + 1; j < pos.length; j++) {
				tableSitDistance d = new tableSitDistance(pos[j], pos[i]);
				System.out.println(d.dist);
				que.add(d);
			}
		}
		
		System.out.println(que.peek().left + " - " + que.peek().right + ": " + que.peek().dist);
	}

}

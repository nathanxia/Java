package Amazon;
import java.util.*;
public class smallestDistance {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//String[] tagList = {"made", "weather", "forecast", "says", "that", "made", "rain", "in", "spain", "stays"};
		//String[] targetList = {"made", "in", "spain"};
		
		String[] targetList = {"2abc", "bcd", "cab"};
		String[] tagList = {"dbc", "2abc", "cab", "bcd", "bcb"};
		
		int[] res = findSmallestDistance(tagList, targetList);
		
		System.out.println(res[0] + " : " + res[1]);
	}
	
	public static int[] findSmallestDistance(String[] tagList, String[] targetList) {
		
		Map<String, Integer> map = new HashMap<>();
		Queue<Integer> que = new LinkedList<>();
		
		for (String s : targetList) {
			map.put(s, -1);
		}
		
		int count = 0;
		int minLen = tagList.length + 2;
		int[] res = new int[2];
		
		for (int i = 0; i < tagList.length; i++) {
			if (map.containsKey(tagList[i])) {
				if (map.get(tagList[i]) == -1) {
					count++;
				}
				else {
					while (tagList[que.peek()] == tagList[i]) {
						que.poll();
					}
				}
				map.put(tagList[i], i);
				que.add(i);
			}
			
			if (count == tagList.length) {
				int left = que.peek();
				
				if (i - left > minLen) {
					minLen = i - left;
					res[0] = left;
					res[1] = i;
				}
				
				map.put(tagList[que.peek()], -1);
				String tmp = tagList[que.peek()];
				while (tmp == tagList[que.peek()]) {
					que.poll();
				}
				
			}
			
			return res;
		}
		
		
		return res;
		
	}

}

	public static void pickFromOneRect(int[] rect) {
		Random ran = new Random();
		int newX = rect[0] + ran.nextInt(rect[2] - rect[0] + 1);
		int newY = rect[1] + ran.nextInt(rect[3] - rect[1] + 1);
		System.out.println("point picked: (" + newX + ", " + newY + ")"); 
	}
	
